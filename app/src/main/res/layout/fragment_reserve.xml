<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.reserve.ReserveFragment">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/font_super"
        android:textSize="32sp"
        android:layout_marginTop="24dp"
        android:textColor="@color/dark_orange"
        android:text="Reserve your table"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="our restaurant has the best service for you and your friends and family."/>

    <ImageView
        android:id="@+id/img"
        app:layout_constraintTop_toBottomOf="@+id/txt2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/reserve"
        android:layout_marginBottom="44dp"
        android:layout_width="match_parent"
        android:layout_height="330dp" />

    <Button
        android:id="@+id/btnReserveNow"
        app:layout_constraintTop_toBottomOf="@id/img"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="RESERVE NOW"/>


</androidx.constraintlayout.widget.ConstraintLayout>